{% extends 'base.html.twig' %}

{% block title %}Liste des Créneaux{% endblock %}

{% block body %}
    <h1>Liste des Créneaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Abonné</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for creneau in creneaux %}
            <tr>
                <td>{{ creneau.dateDebut ? creneau.dateDebut|date('d/m/Y H:i') : '' }}</td>
                <td>{{ creneau.dateFin ? creneau.dateFin|date('d/m/Y H:i') : '' }}</td>
                <td>{{ creneau.abonne.email }}</td>
                <td>
                    <a href="{{ path('creneau_show', {'id': creneau.id}) }}" class="btn btn-info">Voir</a>
                    <a href="{{ path('creneau_edit', {'id': creneau.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun créneau trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('creneau_new') }}" class="btn btn-success">Créer un nouveau créneau</a>
{% endblock %}