{# templates/abonne/_delete_form.html.twig #}
<form method="post" action="{{ path('abonne_delete', {'id': abonne.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet abonné ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ abonne.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>