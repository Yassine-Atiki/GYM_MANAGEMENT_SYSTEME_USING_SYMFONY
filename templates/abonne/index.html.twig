{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des abonnés</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for abonne in abonnes %}
                <tr>
                    <td>{{ abonne.nom }}</td>
                    <td>{{ abonne.prenom }}</td>
                    <td>{{ abonne.email }}</td>
                    <td>
                        <a href="{{ path('abonne_show', {'id': abonne.id}) }}">Voir</a>
                        <a href="{{ path('abonne_edit', {'id': abonne.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('abonne_new') }}">Créer un nouvel abonné</a>
{% endblock %}