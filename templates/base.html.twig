<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Application Symfony{% endblock %}</title>

    {# Liens vers les fichiers CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">

    {# Bloc pour les styles supplémentaires #}
    {% block stylesheets %}{% endblock %}
</head>
<body>
    {# Barre de navigation #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">Mon Application</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('abonne_index') }}">Abonnés</a> <!-- Lien vers la gestion des abonnés -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('paiement_index') }}">Paiements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('creneau_index') }}">Créneaux</a>
                    </li>
                    {# Ajoutez d'autres liens de navigation ici #}
                </ul>
            </div>
        </div>
    </nav>

    {# Contenu principal de la page #}
    <div class="container mt-4">
        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {# Bloc pour le contenu spécifique à chaque page #}
        {% block body %}{% endblock %}
    </div>

    {# Pied de page #}
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; {{ "now"|date("Y") }} Mon Application Symfony. Tous droits réservés.</p>
    </footer>

    {# Liens vers les fichiers JavaScript #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>

    {# Bloc pour les scripts supplémentaires #}
    {% block javascripts %}{% endblock %}
</body>
</html>